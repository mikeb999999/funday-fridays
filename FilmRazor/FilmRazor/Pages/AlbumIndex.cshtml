@page
@model FilmRazor.Pages.AlbumIndexModel

<h1>Albums v1</h1>

@* ref https://docs.microsoft.com/en-us/aspnet/core/tutorials/razor-pages/page?view=aspnetcore-3.0&tabs=visual-studio*@

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Albums.album[0].strArtist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Albums.album[0].strAlbum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Albums.album)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.strArtist)
                </td>
                <td>
                    @Html.DisplayFor(x => item.strAlbum)
                </td>
                <td>
                    <a asp-page="./AlbumDetails" asp-route-id="@item.idAlbum">Details</a>
                </td>
            </tr>
        }
    </tbody>

</table>
